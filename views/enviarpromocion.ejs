<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enviar Promoción</title>
    <link rel="stylesheet" href="../css/helper.css">
</head>
<body>
    <header>
        <h1>Enviar Promoción</h1>
    </header>
    <nav>
        <a href="../html/admin_home.html">Inicio</a>
        <a href="/productos_admin">Productos</a>
        <a href="/usuarios">Usuarios</a>
        <a href="/helper-zone">Helper Zone</a>
        <a href="/enviar-promocion">Promoción</a>
        <a href="../../index.html">Salir</a>
    </nav>
    <main>
        <form id="promocionForm">
            <label for="categorySelect">Selecciona una Categoría:</label>
            <select id="categorySelect">
                <option value="">Todas las Categorías</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.ID_Categoria %>"><%= categoria.Nombre_Categoria %></option>
                <% }); %>
            </select>

            <label for="searchInput">Buscar Producto:</label>
            <input type="text" id="searchInput" placeholder="Escribe el nombre del producto...">

            <label for="product">Selecciona el Producto:</label>
            <select id="product" name="product">
                <% productos.forEach(producto => { %>
                    <option data-category="<%= producto.ID_Categoria %>" value="<%= producto.ID_Producto %>">
                        <%= producto.Nombre_producto %> - $<%= producto.Costo %>
                    </option>
                <% }); %>
            </select>

            <div id="productInfo">
                <img id="productImage" src="" alt="Imagen del producto" width="150" height="150" style="object-fit: cover;">
                <p id="productPrice"></p>
            </div>
            
            <label for="subject">Asunto:</label>
            <input type="text" id="subject" name="subject" value="¡Gran Descuento en Productos!">
            
            <label for="message">Mensaje:</label>
            <textarea id="message" name="message" rows="5">Oye! te espera un descuento por aquí!</textarea>
            
            <button type="button" id="enviarPromocionBtn">Enviar Promoción</button>
        </form>
    </main>

    <footer>
        <p>&copy; Derechos Reservados</p>
    </footer>

    <script>
        const products = <%- JSON.stringify(productos) %>;
        const productImage = document.getElementById('productImage');
        const productPrice = document.getElementById('productPrice');
        const productSelect = document.getElementById('product');
        const searchInput = document.getElementById('searchInput');
        const categorySelect = document.getElementById('categorySelect');

        // Actualiza la vista de producto cuando se selecciona uno nuevo
        productSelect.addEventListener('change', function () {
            const selectedProduct = products.find(p => p.ID_Producto == this.value);
            if (selectedProduct) {
                productImage.src = selectedProduct.imagen_producto;
                productPrice.innerText = `Precio: $${selectedProduct.Costo}`;
            }
        });

        // Filtro en tiempo real al escribir en el campo de búsqueda
        searchInput.addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            for (const option of productSelect.options) {
                const productName = option.textContent.toLowerCase();
                option.style.display = productName.includes(searchTerm) ? '' : 'none';
            }
        });

        // Filtra productos según la categoría seleccionada
        categorySelect.addEventListener('change', function () {
            const selectedCategory = this.value;
            for (const option of productSelect.options) {
                const optionCategory = option.getAttribute('data-category');
                option.style.display = !selectedCategory || optionCategory === selectedCategory ? '' : 'none';
            }
            // Reinicia el filtro de búsqueda al cambiar la categoría
            searchInput.value = '';
        });

        // Envía los datos del formulario
        document.getElementById('enviarPromocionBtn').addEventListener('click', function () {
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            const productId = document.getElementById('product').value;

            fetch('/enviar-promocion', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ subject, message, productId })
            })
            .then(response => {
                if (response.ok) {
                    alert('Promoción enviada correctamente a todos los usuarios.');
                } else {
                    alert('Error al enviar la promoción.');
                }
            })
            .catch(error => {
                console.error('Error en la solicitud:', error);
                alert('Error al enviar la promoción.');
            });
        });
    </script>
</body>
</html>
