<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/categorias.css">
    <title>Categorías</title>
</head>
<body>
    <header>
        <section class="barra-superior container-fluid">
            <div class="row align-items-center">
                <div class="col-2 logo">
                    <a href="/">
                        <img src="/img/logoECDA.png" alt="Logo" title="Ir al Inicio">
                    </a>
                </div>
                <div class="col-8 search-bar">
                    <div class="input-group">
                        <input type="text" id="searchInput" placeholder="Buscar..." class="form-control">
                        <button class="btn" onclick="realizarBusqueda()" title="Buscar...">
                            <img src="/img/buscar.png" alt="Buscar" class="img-buscar">
                        </button>
                    </div>
                </div>
                <div class="col-2 d-flex justify-content-around icons">
                    <a href="/categorias"><img src="/img/categorias.png" alt="Categorias" title="Ir a Categorias"></a>
                    <a href="/carrito"><img src="/img/carrito-de-compras.png" alt="Carrito de Compras" title="Ir al Carrito de Presupuesto"></a>
                    <a href="/tiendas"><img src="/img/tienda.png" alt="Tienda" title="Ir a la Selección de Tiendas"></a>
                    <a href="/login"><img src="/img/iniciar-sesion.png" alt="Iniciar Sesión" title="Iniciar Sesión"></a>
                </div>
            </div>
        </section>
    </header>

    <main>
        <div class="container my-4 principal">
            <h1 class="text-center my-4">Categorías</h1>
            <div class="row">
                <% if (categorias.length > 0) { %>
                    <% categorias.forEach(categoria => { %>
                        <div class="col-12 mb-3 d-flex align-items-center category-item">
                            <a class="img-categoria flex-grow-1 me-3" href="/productos/<%= categoria.ID_Categoria %>" title="Ir a la categoria de <%= categoria.Nombre_Categoria%>">
                                <img src="<%= categoria.imagen_categoria %>" alt="Imagen de <%= categoria.Descripcion_Categoria %>" class="img-fluid img-fixed-size">
                            </a>
                            <a class="nombre-categoria text-center" href="/productos/<%= categoria.ID_Categoria %> " title="Ir a la categoria de <%= categoria.Nombre_Categoria%>">
                                <h2><%= categoria.Nombre_Categoria %></h2>
                            </a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No se encontraron categorías.</p>
                <% } %>
            </div>
        </div>
    </main>

    <footer>
        <img src="/img/logoECDA.png" alt="Logo de la empresa" class="mb-2">
        <p>&copy; Derechos Reservados</p>
        <nav class="d-flex justify-content-center gap-3">
            <a href="/contacto" class="text-decoration-none">Ir a contacto</a>
            <a href="/legal" class="text-decoration-none">Ir al legal</a>
            <a href="/" class="text-decoration-none">Ir al Inicio</a>
        </nav>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/barra_busqueda.js"></script>
</body>
</html>
