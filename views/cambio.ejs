<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recuperar Contraseña</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/css/cambio.css">
    <link rel="icon" href="../public/img/ico.ico" type="image/x-icon">
    <script src="../public/js/camb.js" defer></script>
    <script>
        function realizarBusqueda() {
            let query = document.getElementById("searchInput").value;
            if (query) {
                alert("Buscando: " + query);
            }
        }

        document.addEventListener("DOMContentLoaded", function() {
            let searchInput = document.getElementById("searchInput");
            searchInput.addEventListener("keydown", function(event) {
                if (event.key === "Enter") {
                    realizarBusqueda();
                }
            });
        });
    </script>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header>
        <section class="barra-superior container-fluid">
            <div class="row align-items-center">
                <div class="col-2 logo">
                    <a href="/">
                        <img src="../public/img/logoECDA.png" alt="Logo" title="Ir al Inicio">
                    </a>
                </div>
                <div class="col-8 search-bar">
                    <div class="input-group">
                        <input type="text" id="searchInput" placeholder="Buscar..." class="form-control">
                        <button class="btn" onclick="realizarBusqueda()" title="Buscar...">
                            <img src="../public/img/buscar.png" alt="Buscar" class="img-buscar">
                        </button>
                    </div>
                </div>
                <div class="col-2 d-flex justify-content-around icons">
                    <a href="/categorias"><img src="../public/img/categorias.png" alt="Categorias" title="Ir a Categorias"></a>
                    <a href="/carrito"><img src="../public/img/carrito-de-compras.png" alt="Carrito de Compras" title="Ir al Carrito de Presupuesto"></a>
                    <a href="/tiendas"><img src="../public/img/tienda.png" alt="Tienda" title="Ir a la Selección de Tiendas"></a>
                    <a href="/login"><img src="../public/img/iniciar-sesion.png" alt="Iniciar Sesión" title="Iniciar Sesión"></a>
                </div>
            </div>
        </section>
    </header>

    <!-- Main content -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="recuperar text-white p-4 rounded shadow-lg">
            <h1 class="text-center mb-4">Recuperar Contraseña</h1>
            <div class="datos p-4 rounded text-dark">
                <h3 class="text-primary text-center mb-3">Introduzca su Contraseña</h3>
                <p class="text-center mb-4">Por favor, ingresa tu nueva contraseña.</p>
                <form action="/auth/cambio" method="POST" class="d-flex flex-column gap-3">
                    <input type="password" id="password" name="password" class="form-control" placeholder="Nueva Contraseña" required>
                    <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Confirma tu Contraseña" required>
                    <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <img src="../public/img/logoECDA.png" alt="Logo de la empresa" class="mb-2">
        <p>&copy; Derechos Reservados</p>
        <nav class="d-flex justify-content-center gap-3">
            <a href="/contacto" class="text-decoration-none">Ir a contacto</a>
            <a href="/legal" class="text-decoration-none">Ir al legal</a>
            <a href="/" class="text-decoration-none">Ir al Inicio</a>
        </nav>
    </footer>

    <% if (typeof mensaje !== 'undefined') { %>
        <script>alert("<%= mensaje %>");</script>
      <% } %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
