<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/tienda_selesc.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="../public/img/ico.ico" type="image/x-icon">  
    <title>Selección de Tiendas</title>
    <script src="../public/js/tienda_selec.js"></script>
</head>
<body>
    <header>
        <section class="barra-superior">
            <div class="logo">
                <img src="../public/img/logoECDA.png" alt="Logo">
            </div>
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Buscar...">
                <button onclick="realizarBusqueda()">
                    <img src="../public/img/buscar.png" alt="Buscar">
                </button>
            </div>
            <div class="icons">
                <a href="/categorias">
                    <img src="../public/img/categorias.png" alt="Categorías">
                </a>
                <a href="/Carrito">
                    <img src="../public/img/carrito-de-compras.png" alt="Carrito de Compras">
                </a>
                <a href="/tiendas">
                    <img src="../public/img/tienda.png" alt="Tienda">
                </a>
                <% if (isLoggedIn) { %>
                    <a href="/auth/logout">
                        <img src="../public/img/cerrar-sesion.png" alt="Cerrar Sesión">
                    </a>
                  <% } else { %>
                    <a href="/login">
                        <img src="../public/img/iniciar-sesion.png" alt="Iniciar Sesión">
                    </a>
                  <% } %>    
            </div>
        </section>
    </header> 

    <main>
        <section class="principal">
            <section class="encabezado">
                <div class="boton-enviar">
                    <button onclick="obtenerTiendasSeleccionadas()">Guardar Selección
                        <img src="../public/img/save-info.png" alt="Guardar">
                    </button>
                </div>
                <div class="titulo">
                    <h1>Tiendas</h1>
                </div>
                <div class="busqueda">
                    <input type="text" id="searchTiendaInput" placeholder="Buscar Tienda...">
                    <button onclick="realizarBusquedaMain()">
                    </button>
                </div>
            </section>

            <section class="segunda_seccion">
                <section class="tiendas">
                    <% if (proveedores.length > 0) { %>
                        <% proveedores.forEach(proveedor => { %>
                            <div class="tienda">
                                <label>
                                    <input type="checkbox" class="tienda-checkbox" value="<%= proveedor.Nombre_Proveedor %>" checked>
                                    <%= proveedor.Nombre_Proveedor %>
                                </label>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>No hay proveedores disponibles.</p>
                    <% } %>
                </section>
            </section>
        </section>
    </main>

    <footer>
        <div class="footer-container">
            <!-- Sección de Logo e Información Básica -->
            <div class="footer-section about">
                <img src="../public/img/logoECDA.png" alt="Logo" class="footer-logo">
                <p>© 2024 Cacique del Ahorro. Todos los derechos reservados.</p>
                <p>Tu fuente confiable para las mejores ofertas y productos.</p>
            </div>
            
            <!-- Sección de Enlaces Rápidos -->
            <div class="footer-section links">
                <h3>Enlaces Rápidos</h3>
                <ul>
                    <li><a href="/">Inicio</a></li>
                    <li><a href="/categorias">Categorías</a></li>
                    <li><a href="/Carrito">Carrito de Compras</a></li>
                    <li><a href="/tiendas">Tiendas</a></li>
                    <li><a href="/login">Iniciar Sesión</a></li>
                    <li><a href="/legal">legal</a></li>
                    <li><a href="/contacto">Contacto</a></li>
                </ul>
            </div>
            
            <!-- Sección de Información de Contacto -->
            <div class="footer-section contact">
                <h3>Contacto</h3>
                <p><i class="fas fa-map-marker-alt"></i> Calle del cacique 619, Temuco, Chile</p>
                <p><i class="fas fa-phone"></i> +56 9 1234 5678</p>
                <p><i class="fas fa-envelope"></i> contacto@caciquedelahorro.cl</p>
            </div>
            
            <!-- Sección de Redes Sociales -->
            <div class="footer-section social">
                <h3>Síguenos</h3>
                <div class="social-icons">
                    <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="../public/js/barra_busqueda.js"></script>
</body>
</html>
