    <script>
        function toggleSection(sectionId, button) {
            const section = document.getElementById(sectionId);
            // Toggle visibility of the section
            if (section.style.display === "block") {
                section.style.display = "none"; // Ocultar si ya está visible
                button.classList.remove('active'); // Remover clase activa del botón
            } else {
                section.style.display = "block"; // Mostrar si está oculto
                button.classList.add('active'); // Añadir clase activa al botón
            }
        }
    </script>
</head>

<body>
    <header>
        <section class="barra-superior">
            <div class="logo">
