<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/vista_producto.css">
    <title><%= producto[0].Nombre_producto %></title> <!-- Usamos el primer producto para el título -->
</head>
<body>
    <header>
        <section class="barra-superior">
            <div class="logo">
                <img src="/img/logoECDA.png" alt="Logo">
            </div>
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Buscar...">
                <button onclick="realizarBusqueda()">
                    <img src="/img/buscar.png" alt="Buscar">
                </button>
            </div>
            <div class="icons">
                <a href="/categorias">
                    <img src="/img/categorias.png" alt="Categorías">
                </a>
                <a href="/carrito">
                    <img src="/img/carrito-de-compras.png" alt="Carrito de Compras">
                </a>
                <a href="/tiendas">
                    <img src="/img/tienda.png" alt="Tienda">
                </a>
                <a href="/auth/login">
                    <img src="/img/iniciar-sesion.png" alt="Iniciar Sesión">
                </a>    
            </div>
        </section>
    </header> 

    <main>
        <section class="principal">
            <!-- Información del producto -->
            <div class="column producto">
                <div class="column imagen">
                    <img src="<%= producto[0].imagen_producto %>" alt="<%= producto[0].Nombre_producto %>" style="width:50%; height:auto;">
                </div>
                <div class="column informacion">
                    <h1><%= producto[0].Nombre_producto %></h1>
                    <p><%= producto[0].Descripcion_Producto %></p>
                </div>
            </div>

            <!-- Precios de los proveedores -->
            <div class="column segundo-apartado">
                <div class="precios">
                    <div class="column titulo">
                        <h1>Precios</h1>
                    </div>
                    <div class="column productos">
                        <!-- Recorremos cada proveedor y mostramos su precio -->
                        <% producto.forEach(function(detalle) { %>
                        <div class="producto-item">
                            <div class="producto-tienda"><%= detalle.Nombre_Proveedor %></div>
                            <div class="producto-precios">
                                <p>Precio: $<%= detalle.Precio %></p>
                            </div>
                            <div class="producto-carrito">
                                <img src="/img/carrito-de-compras.png" alt="Añadir al carrito">
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <img src="/img/logoECDA.png" alt="Logo de la empresa">
        <p>&copy; Derechos Reservados</p>
        <nav>
            <a href="/">Ir al Inicio</a>
        </nav>
    </footer>
</body>
</html>
